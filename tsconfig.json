{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist", // Specify the output directory for compiled JavaScript files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts" // Specify the directory containing your TypeScript source files
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory from compilation
  ]
}
